<head>
  <link rel="stylesheets" href="../../assets/stylesheets/application.css">
</head>

<body>
  <h1>
    <storong>Books</storong>
  </h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book) %></td>
        <td><%= link_to "Edit", edit_book_path(book) %></td>
        <td><%= link_to "Destroy", "/books/#{book.id}", method: :delete, "data-confirm" => "Are you sure?" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <h2>New Book</h2>

  <% if @book.errors.any? %>
    <h3><%= @book.errors.count %>error prohibited this book from being saved:</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

    <div class="field">
    <%= form_with model: @book, local:true do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    </div>
    <div class="field">
    <h4>Body</h4>
    <%= f.text_area :body %>
    </div>
    <div class="action">
    <%= f.submit 'Create Book' %>
    <% end %>
    </div>

</body>

