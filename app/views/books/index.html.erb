<body>
  <h1>
    <storong>Books</storong>
  </h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book) %></td>
        <td><%= link_to "Edit", edit_book_path(book) %></td>
        <td><%= link_to "Destroy", "/books/#{book.id}", method: :delete, "data-confirm" => "Are you sure?" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <h2>New Book</h2>

  <% if @book.errors.any? %>
    <div id="error">
        <h3>
          <%= @book.errors.count %> errors prohibited this book from being saved:
        </h3>
      <ul id="error-message">
          <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
      </ul>
    </div>
  <% end %>

    <%= form_with model: @book, local:true do |f| %>
    <%= f.label :title, class: "label" %>
    <div class="field">
    <%= f.text_field :title %>
    </div>
    <%= f.label :body, class: "label" %>
    <div class="field">
    <%= f.text_area :body %>
    </div>
    <div class="field" >
    <%= f.submit 'Create Book' %>
    <% end %>
    </div>

</body>

