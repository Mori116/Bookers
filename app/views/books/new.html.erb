  <h2>New Book</h2>
  <form>
    <div class="field">
    <%= form_with model: @book, url:'/books', local:true do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    </div>
    <div class="field">
    <h4>Body</h4>
    <%= f.text_area :body %>
    </div>
    <div class="action">
    <%= f.submit 'Create Book' %>
    <% end %>
    </div>
  </form>