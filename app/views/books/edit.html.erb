<body>
<h1>Editing Book</h1>

    <% if @book.errors.any? %>
      <div id="error">
          <h3>
            <%= @book.errors.count %> errors prohibited this book from being saved:
          </h3>
        <ul id="error-message">
            <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with model: @book, local:true do |f| %>
    <%= f.label :title, class: "label" %>
    <div class="field">
    <%= f.text_field :title %>
    </div>
    <%= f.label :body, class: "label" %>
    <div class="field">
    <%= f.text_area :body %>
    </div>
    <div class="field">
    <%= f.submit 'Update Book' %>
    <% end %>
    </div>

<div class="page1">
  <%= link_to "Show", book_path(@book) %>
</div>
